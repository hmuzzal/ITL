
@{
    ViewData["Title"] = "Dashboard";
}

<div class="col-md-8 mr-auto ml-auto padding-dashboard mt-3 form-bg text-center">
    <h3 class="formbar mb-0">Dashboard</h3>

    <div class="card text-white bg-primary ml-5 mt-3 float-left" style="min-width: 14rem;">
        <div class="card-header">Request For Cards</div>
        <div class="card-body">
            <h5 class="card-title">@ViewBag.RequestedIdentityCards</h5>
        </div>
    </div>

    <div class="card text-white bg-success ml-5 mt-3 float-left" style="min-width: 14rem;">
        <div class="card-header">Validated Cards</div>
        <div class="card-body">
            <h5 class="card-title">@ViewBag.ValidatedIdentityCards</h5>
        </div>
    </div>

    <div class="card text-white bg-danger ml-5 mt-3 float-left" style="min-width: 14rem;">
        <div class="card-header">Expired Cards</div>
        <div class="card-body">
            <h5 class="card-title">@ViewBag.ExpiredIdentityCards</h5>
        </div>
    </div>
</div>


