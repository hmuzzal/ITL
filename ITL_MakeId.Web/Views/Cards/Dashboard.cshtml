@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Dashboard";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="col-md-8 mr-auto ml-auto padding-dashboard mt-3 form-bg text-center">
        <h3 class="formbar mb-0">Dashboard</h3>

        <div class="card text-white bg-primary ml-5 mt-3 float-left" style="min-width: 14rem;">
            <div class="card-header">Request For Cards</div>
            <div class="card-body">
                <a class="text-white"asp-area="" asp-controller="Cards" asp-action="UserRequestForCard">
                    <h5 class="card-title">@ViewBag.RequestedIdentityCards</h5>
                </a>
            </div>
        </div>

        <div class="card text-white bg-success ml-5 mt-3 float-left" style="min-width: 14rem;">
            <div class="card-header">Validated Cards</div>
            <div class="card-body">
                <a class="text-white" asp-area="" asp-controller="Cards" asp-action="ValidatedUsers">  
                    <h5 class="card-title">@ViewBag.ValidatedIdentityCards</h5>
                    </a>
            </div>
        </div>

        <div class="card text-white bg-danger ml-5 mt-3 float-left" style="min-width: 14rem;">
            <div class="card-header">Expired Cards</div>
            <div class="card-body">
                <a class="text-white" asp-area="" asp-controller="Cards" asp-action="ExpiredUserCards"> <h5 class="card-title">@ViewBag.ExpiredIdentityCards</h5></a>
            </div>
        </div>
    </div>
}

else
{
<div class="text-center ml-auto mr-auto mt-3">
    <h1 class="display-4 mt-5 mb-5">Welcome</h1>
    <h3 class="display-4 mb-5">To</h3>
    <img class="mb-5 col-md-10" src="~/image/ba-2.png" />
</div>
}