@model ITL_MakeId.Model.ViewModel.IdentityCardViewModel

@{
    ViewData["Title"] = "Details";
    var imageUrl = "~/image/user/" + (Model.IdentityCard.ImagePathOfUser);
}


<div class="col-md-4 ml-auto mr-auto">
    <div>
        <h3 class="formbar mb-0">Identity Card Details</h3>

       

        <div class="form-bg p-3">
            <img style="height: 30px;width: 55px" class="card-img-top" src="@imageUrl" asp-append-version="true" />
            <dl class="row">
                <dt class="col-sm-2">
                </dt>
                <dd class="col-sm-10">



                </dd>


                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Designation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.Designation.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BloodGroup)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.BloodGroup.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CardNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.CardNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.CompanyName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CompanyAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentityCard.CompanyAddress)
                </dd>
            </dl>
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdentityCard.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>